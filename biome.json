{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["test/mocked-responses/*"]
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useSemanticElements": "off",
        "useAriaPropsForRole": "off"
      },
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": { "allow": ["warn", "error"] }
        },
        "noPrototypeBuiltins": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}
